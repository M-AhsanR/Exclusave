<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.UpdateNameActivity"
    android:orientation="vertical">

    <TextView
        android:gravity="center_vertical"
        android:paddingStart="40dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        style="@style/HeadingText"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/heading"
                android:textStyle="bold"
                style="@style/HeadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/updateYourName"
                android:textColor="@color/black" />

            <EditText
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZغظضذخثتشرقصجفعسنملةىكيطئءؤحزوهدبا"
                android:maxLines="1"
                android:id="@+id/fName"
                android:hint="@string/FirstName"
                android:layout_marginTop="10dp"
                style="@style/GreyEditText" />
            <EditText
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZغظضذخثتشرقصجفعسنملةىكيطئءؤحزوهدبا"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:id="@+id/lName"
                android:hint="@string/LastName"
                android:layout_marginTop="5dp"
                style="@style/GreyEditText" />
            <EditText
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZغظضذخثتشرقصجفعسنملةىكيطئءؤحزوهدبا"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:id="@+id/mName"
                android:hint="@string/MiddleName"
                android:layout_marginTop="5dp"
                style="@style/GreyEditText" />
        </LinearLayout>


        <Button
            android:id="@+id/update"
            style="@style/OrangeBtn"
            android:layout_alignParentBottom="true"
            android:text="@string/Update"/>
    </RelativeLayout>

</LinearLayout>
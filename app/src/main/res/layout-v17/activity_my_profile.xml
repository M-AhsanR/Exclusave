<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MyProfileActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black">

    <TextView
        android:gravity="center_vertical"
        android:paddingStart="40dp"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="@string/profile"
        style="@style/HeadingText"
        android:textStyle="bold"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/personalInforamtion"
            style="@style/HeadingText"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="95dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="95dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/personalinfopic"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="#33222222"
                android:layout_centerInParent="true"/>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="-3dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">

            <View
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle_shape"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/personalinfopicbtn"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:background="@drawable/cam_icon"/>
        </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical"
            android:background="@drawable/grey_edittxt">

            <LinearLayout
                android:id="@+id/name_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:textColorHint="@color/dark_grey"
                android:textColor="@color/black"
                android:drawableTint="@color/dark_grey"
                android:gravity="center_vertical"
                style="@style/NormalText"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/NAME"/>

                <View
                    android:layout_width="0sp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:rotationY="@integer/locale_mirror_flip"
                    android:background="@drawable/next_arrow_black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_grey">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/email"
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/black"
                    android:drawableTint="@color/dark_grey"
                    android:gravity="center_vertical"
                    style="@style/NormalText"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"/>

                <View
                    android:layout_width="0sp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:rotationY="@integer/locale_mirror_flip"
                    android:layout_gravity="center"
                    android:background="@drawable/next_arrow_black"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_grey">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dob_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/dob"
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/black"
                    android:drawableTint="@color/dark_grey"
                    android:gravity="center_vertical"
                    style="@style/NormalText"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/dob"/>

                <View
                    android:layout_width="0sp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:rotationY="@integer/locale_mirror_flip"
                    android:background="@drawable/next_arrow_black"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_grey">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phone_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/phone"
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/black"
                    android:drawableTint="@color/dark_grey"
                    android:gravity="center_vertical"
                    style="@style/NormalText"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/phoneNumber"/>

                <View
                    android:layout_width="0sp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:rotationY="@integer/locale_mirror_flip"
                    android:background="@drawable/next_arrow_black"/>

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_grey">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/interest_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/interest"
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/black"
                    android:drawableTint="@color/dark_grey"
                    android:gravity="center_vertical"
                    style="@style/NormalText"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/interests"/>

                <View
                    android:layout_width="0sp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:rotationY="@integer/locale_mirror_flip"
                    android:background="@drawable/next_arrow_black"/>

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_grey">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/company_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/company"
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    style="@style/NormalText"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/companyName"/>

                <View
                    android:layout_width="0sp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:rotationY="@integer/locale_mirror_flip"
                    android:background="@drawable/next_arrow_black"/>

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_grey">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/showID_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/black"
                    android:id="@+id/showID"
                    android:drawableTint="@color/dark_grey"
                    android:gravity="center_vertical"
                    style="@style/NormalText"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/idBusinessEmployeeStudent"/>

                <View
                    android:layout_width="0sp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:rotationY="@integer/locale_mirror_flip"
                    android:background="@drawable/next_arrow_black"/>

            </LinearLayout>


        </LinearLayout>



        <TextView
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/additionalCard"
            style="@style/HeadingText"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="95dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="95dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/familypic"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="@color/light_grey"
                android:layout_centerInParent="true"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:src="#33222222"
                android:layout_centerInParent="true"/>

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginBottom="-3dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true">

            <View
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/circle_shape"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/familypicbtn"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:background="@drawable/cam_icon"/>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical"
            android:background="@drawable/grey_edittxt">

            <LinearLayout
                android:id="@+id/familyName_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/familyName"
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    style="@style/NormalText"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/NAME"/>

                <View
                    android:layout_width="0sp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:rotationY="@integer/locale_mirror_flip"
                    android:background="@drawable/next_arrow_black"/>

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_grey">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/familyPhone_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/familyPhone"
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    style="@style/NormalText"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/phoneNumber"/>

                <View
                    android:layout_width="0sp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:rotationY="@integer/locale_mirror_flip"
                    android:background="@drawable/next_arrow_black"/>

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_grey">
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    style="@style/NormalText"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"/>

                <View
                    android:layout_width="0sp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:rotationY="@integer/locale_mirror_flip"
                    android:background="@drawable/next_arrow_black"/>

            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_grey">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/familyDOB_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/familyDOB"
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    style="@style/NormalText"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/dob"/>

                <View
                    android:layout_width="0sp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:rotationY="@integer/locale_mirror_flip"
                    android:background="@drawable/next_arrow_black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_grey">
            </LinearLayout>


            <LinearLayout
                android:id="@+id/familyGender_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/familyGender"
                    android:textColorHint="@color/dark_grey"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    style="@style/NormalText"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/gender"/>

                <View
                    android:layout_width="0sp"
                    android:layout_height="1dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:rotationY="@integer/locale_mirror_flip"
                    android:background="@drawable/next_arrow_black"/>

            </LinearLayout>





        </LinearLayout>


        <TextView
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/renew"
            style="@style/NormalText"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical"
            android:background="@drawable/grey_edittxt">

            <TextView
                android:textColor="@color/dark_grey"
                android:gravity="center_vertical"
                style="@style/NormalText"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 YEAR" />
        </LinearLayout>



    </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4sp">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/expended_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_corner_white_shape">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:id="@+id/listitemviewtwo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@color/light_grey"
                    android:layout_centerInParent="true"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:textSize="15sp"
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CUSTOMER NAME"
                        android:textStyle="bold"
                        style="@style/NormalText"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/cardType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CARD TYPE"
                        style="@style/HeadingText"
                        android:textColor="@color/black"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:textAllCaps="true"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/experiance"
                        style="@style/HeadingText"
                        android:textColor="@color/black"/>

                    <RatingBar
                        android:id="@+id/ratings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:stepSize="0.1"
                        android:isIndicator="true"
                        android:numStars="5"
                        style="?android:attr/ratingBarStyleSmall"
                        android:rating="0"/>
                </LinearLayout>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_marginStart="40dp"
                    android:id="@+id/timeAndDate"
                    android:textColor="@color/dark_grey"
                    android:textStyle="bold"
                    style="@style/NormalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:00 AM | 2.20.12"/>
            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/COMMENT"
                style="@style/NormalText"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOU WILL RECEIVEAN SMS WITH YOUR PASSWORD WITHIN 24 WORKING HOURS."
                android:textColor="@color/black"
                style="@style/NormalText"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/dark_grey"></androidx.viewpager.widget.ViewPager>

            <com.bikomobile.circleindicatorpager.CircleIndicatorPager
                android:id="@+id/indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                app:ci_drawable="@drawable/black_dot"
                app:ci_drawable_unselected="@drawable/grey_dot"></com.bikomobile.circleindicatorpager.CircleIndicatorPager>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:elevation="1sp"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_corner_white_shape"
                        android:backgroundTint="@color/light_grey"
                        android:elevation="2sp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/fb"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/facebook_icon"
                                android:backgroundTint="@color/black"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_corner_white_shape"
                        android:backgroundTint="@color/light_grey"
                        android:elevation="2sp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/insta"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/ic_instagram_logo"
                                android:backgroundTint="@color/black" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_corner_white_shape"
                        android:backgroundTint="@color/light_grey"
                        android:elevation="2sp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/twitter"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/twitter_icon"
                                android:backgroundTint="@color/black" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_corner_white_shape"
                        android:backgroundTint="@color/light_grey"
                        android:elevation="2sp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/web"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/web_icon"
                                android:backgroundTint="@color/black" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_corner_white_shape"
                    android:backgroundTint="@color/light_grey"
                    android:elevation="1sp"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:textAllCaps="true"
                        style="@style/HeadingText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/description"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/description"
                        style="@style/HeadingText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp" />
                </LinearLayout>

                <TextView
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:id="@+id/reviews"
                    style="@style/GreyEditText"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_corner_white_shape"
                    android:backgroundTint="@color/light_grey"
                    android:drawableEnd="@drawable/drop_down_black"
                    android:editable="false"
                    android:elevation="1sp"
                    android:textColor="@color/black" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>